# Application port
PORT=3000

# Public URL used by the frontend to contact the backend
API_URL=http://localhost:3000

# Whether to proxy video content directly through this service
PROXY_CONTENT=TRUE

# Optional SOCKS5 proxy for upstream DLHD requests (format: user:pass@host:port)
SOCKS5=

# Optional Flaresolverr endpoint to solve Cloudflare challenges for dlhd.dad requests
FLARESOLVERR_URL=
# Timeout (in seconds) for Flaresolverr requests
FLARESOLVERR_TIMEOUT=60

# Timezone and guide refresh configuration
TZ=UTC
GUIDE_UPDATE=03:00

# Optional path to persist the generated token encryption key
# DLHD_PROXY_KEY_FILE=/app/data/token.key
